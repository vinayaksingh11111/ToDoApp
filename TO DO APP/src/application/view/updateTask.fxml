		<JFXButton fx:id="updateTaskButton" layoutX="136.0"
			layoutY="336.0" style="-fx-background-color: #EF5350;" text="UPDATE">
			<font>
				<Font name="Copperplate Gothic Bold" size="18.0" />
			</font>
		</JFXButton>
	</children>
</AnchorPane>
