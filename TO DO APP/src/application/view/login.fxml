<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="600.0"
	style="-fx-background-color: #f5f5f5;"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.Controller.loginController">
	<children>
		<AnchorPane prefHeight="85.0" prefWidth="600.0"
			style="-fx-background-color: #e53935;">
			<children>
				<Label alignment="CENTER" layoutX="176.0" layoutY="22.0"
