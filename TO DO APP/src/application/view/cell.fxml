				<Image url="@../items/icons8-todo-list-50.png" />
			</image>
		</ImageView>
		<Label fx:id="task" layoutX="38.0" layoutY="15.0"
			prefHeight="22.0" prefWidth="150.0"
			style="-fx-background-color: #00ACC1;" text="Task">
			<font>
				<Font name="Arial Black" size="13.0" />
			</font>
		</Label>
		<Label fx:id="description" layoutX="38.0" layoutY="45.0"
			maxWidth="300.0" minWidth="200.0" prefHeight="38.0" prefWidth="263.0"
			style="-fx-background-color: #00ACC1;" text="Description">
